<h1>Listing calls</h1>

<span>Current Vote: </span><b><%= @vote %></b>
<br />
<%= link_to 'New Call', new_call_path %>
<br />
<br />
<table>
  <tr>
    <th>Date</th>
    <th>Number</th>
    <th>Vote</th>
  </tr>

<% @calls.each do |call| %>
  <tr>
    <% t = call.created_at %>
    <% ft = "#{t.min}:#{t.sec}" %>
    <td><%= ft %></td>
    <td><%= call.number[-4..-1] %></td>
    <td><%= call.vote %></td>
<!--
    <td><%= link_to 'Show', call %></td>
    <td><%= link_to 'Edit', edit_call_path(call) %></td>
    <td><%= link_to 'Destroy', call, :confirm => 'Are you sure?', :method => :delete %></td>
-->
  </tr>
<% end %>
</table>

<br />

